{
  "compilerOptions": {
    "lib": ["ESNext"],
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": false,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"]
}
